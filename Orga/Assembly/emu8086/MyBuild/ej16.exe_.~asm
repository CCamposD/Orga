;A partir de la direccion 3002 hay un conjunto de datos de
;longitud dada en la direccion 3001.
;Almacenar en la direccion 3000 el dato menor.

.model small
.stack
.data
.code

main PROC
mov ax,@data
mov ds, ax

; cargo los datos

mov si, 3002h
mov cl, [3001h]

mov al, [si] ; el primero sera menor hasta que se demuestre lo contrario
inc si
dec cl  ; ya vimos un dato

buscar_menor:
mov ah, [si]
cmp ah, al
jge siguiente ; si ah >= al nada cambia
mov al, ah

siguiente:
inc si
dec cl
jnz buscar_menor

mov [03000h], al    ; guardo el dato menor

mov ah, 4Ch
int 21h

main ENDP
END main





