;CALCULAR LA SUMA DE 4 DATOS

;.MODEL SMALL
;.STACK ; asigna un STACK de 1K

.DATA

DATOSSUM DB 01h, 02h, 03h, 12h


.CODE


mov ax, @DATA     ; Poner en AX la dirección de los datos
mov ds, ax        ; Cargar en el data segment esa dirección
xor bx, bx        ; indice de acceso al área de datos
xor dl, dl        ; acumulador de datos
mov cx, 04h       ; numero de datos a procesar


;CALCULO DE LA SUMA

ACUMULA:
mov dh, DATOSSUM [BX]
add dl, DATOSSUM [BX]
inc bx
loop ACUMULA

;MOSTRAR RESULTADO EN PANTALLA


;ADD dl,30h     ; Para los numeros de 1 digito la receta es sumar 30 => 06 + 30 = 36
mov al, dl    ; muevo 12 a 'al'
aam

MOV AX,0B800h ; segmento de la memoria de pantalla
MOV DS,AX     ; apuntar segmento de datos a la misma
MOV BX,0      ; apuntar al primer carácter ASCII de la pantalla
MOV DH,90h      ; fondo azul
MOV [BX],ah   ; caracter cargado en DL
add bx,2
mov [bx],al






END



