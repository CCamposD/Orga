;CALCULAR LA SUMA DE 3 DATOS

.MODEL SMALL
.STACK ; asigna un STACK de 1K

.DATA

DATOSSUM DB 01, 02, 03, 12


.CODE


mov ax, @DATA     ; Poner en AX la dirección de los datos
mov ds, ax        ; Cargar en el data segment esa dirección
xor bx, bx        ; indice de acceso al área de datos
xor dl, dl        ; acumulador de datos
mov cx, 10       ; numero de datos a procesar


;CALCULO DE LA SUMA

ACUMULA:
mov dh, DATOSSUM [BX]
add dl, DATOSSUM [BX]
inc bx
loop ACUMULA

;MOSTRAR RESULTADO EN PANTALLA

MOV  AX,0B800h         ; segmento de la memoria de pantalla
MOV  DS,AX             ; apuntar segmento de datos a la misma
MOV  BX,0              ; apuntar al primer carácter ASCII de la pantalla
MOV  DH,90h              ; fondo azul
; Para simplificar el print:
; mov ah,2 o mov ah,02h
; int 21h


mov al, dl     ; cargo el resultado en al
aam            ; ah = 1[d] , al 8 [u]
add ah, 30h    ; llevo el ascii a su n^
add al, 30h    ; " " " " " " " " " " "
mov dl, ah     ; muevo para mostar primero el 1
MOV  [bx],dx
add  bx, 2
mov  dl, al    ; muevo para mostrar el 8
MOV  [Bx],dx   ; caracter cargado en DL


END



